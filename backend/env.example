PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=your-mongodb-connection-string

# Auth
JWT_SECRET=your-secret-key

# Bootstrap admin (use only for recovery if DB is empty/reset)
# After you successfully login, set BOOTSTRAP_ADMIN_ENABLED=false
BOOTSTRAP_ADMIN_ENABLED=false
BOOTSTRAP_ADMIN_EMAIL=admin@school.com
BOOTSTRAP_ADMIN_PASSWORD=admin123

# Dialogflow (Google Dialogflow ES)
DIALOGFLOW_PROJECT_ID=your-gcp-project-id
DIALOGFLOW_LANGUAGE_CODE=en-US
# Paste the entire service account JSON as ONE LINE (escape newlines in private_key with \\n)
DIALOGFLOW_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"..."}

# Optional: OpenAI (if used elsewhere)
OPENAI_API_KEY=your-openai-api-key

# Optional: AWS S3 uploads
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-bucket-name


